@using Commons;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewClinic</title>
    <style>
        .popPadding {
            padding: 0px !important;
        }

        .paragraph {
            font-size: 12px;
        }

        .heading {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <form id="@Convert.ToInt32(Enums.ScreenID.ViewAppointment)">
        <div class="col-lg-12 col-xlg-3 col-md-12 col-sm-12">
            <div class="card">
                <input type="hidden" id="hdnClinicID" name="hdnClinicID" value='0' />
                <div class="card-body popPadding">
                    <!-- .row -->
                    <div class="row">
                        <div class="col-md-3 b-r">
                            <span class="paragraph heading">Doctor:</span>
                            <p id="pDoctorName" class="paragraph"></p>
                            <span class="paragraph heading">Appointment Date:</span>
                            <p id="pAppointmentDate" class="paragraph"></p>
                            <span class="paragraph heading">Day:</span>
                            <p id="pDay" class="paragraph"></p>
                            <span class="paragraph heading">Time:</span>
                            <p id="pTime" class="paragraph"></p>
                        </div>
                        <div class="col-md-3 b-r">
                            <span class="paragraph heading">Patient:</span>
                            <p id="pPatientName" class="paragraph"></p>
                            <span class="paragraph heading">Patient Type:</span>
                            <p id="pPatientType" class="paragraph"></p>
                            <span class="paragraph heading">CNIC:</span>
                            <p id="pCNIC" class="paragraph"></p>
                            <span class="paragraph heading">Contact</span>
                            <p id="pContact" class="paragraph"></p>
                        </div>
                        <div class="col-md-3 b-r">
                            <span class="paragraph heading">Email:</span>
                            <p id="pEmail" class="paragraph"></p>
                            <span class="paragraph heading">Service:</span>
                            <p id="pService" class="paragraph"></p>
                            <span class="paragraph heading">Disease:</span>
                            <p id="pDisease" class="paragraph"></p>
                            <span class="paragraph heading">Status:</span>
                            <p id="pStatus" class="paragraph"></p>
                        </div>
                        <div class="col-md-3">
                            <span class="paragraph heading">Created Date:</span>
                            <p id="pCreatedDate" class="paragraph"></p>
                            <span class="paragraph heading">Created By:</span>
                            <p id="pCreatedBy" class="paragraph"></p>
                            <span class="paragraph heading">Appointment Taken:</span>
                            <p id="pAppointmentTakenTimeStamp" class="paragraph"></p>
                            <span class="paragraph heading">Appointment Processed:</span>
                            <p id="pAppointmentProcessedTimeStamp" class="paragraph"></p>
                        </div>
                    </div>
                    <hr>
                    <!-- /.row -->
                    <!-- .row -->
                    <div class="row text-center">
                        <div class="col-md-12 b-r">
                            <span class="paragraph heading">Discription</span>
                            <p id="pNote" class="paragraph"></p>
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
<script>
    $(document).ready(function () {
        $("#pDoctorName").append(' ' + SearchAppointment.getAppointmentCellValues["Doctor_Name"]);
        $("#pAppointmentDate").append(' ' + common.toDate(SearchAppointment.getAppointmentCellValues["Appointment_Date"]));
        $("#pDay").append(' ' + SearchAppointment.getAppointmentCellValues["Day"]);
        $("#pTime").append(' ' + SearchAppointment.getAppointmentCellValues["Time"]);
        $("#pPatientName").append(' ' + SearchAppointment.getAppointmentCellValues["Patient_Name"]);
        $("#pPatientType").append(' ' + SearchAppointment.getAppointmentCellValues["Patient_Type"]);
        $("#pCNIC").append(' ' + SearchAppointment.getAppointmentCellValues["CNIC"]);
        $("#pContact").append(' ' + SearchAppointment.getAppointmentCellValues["Contact"]);
        $("#pEmail").append(' ' + SearchAppointment.getAppointmentCellValues["Email"]);
        $("#pService").append(' ' + SearchAppointment.getAppointmentCellValues["Service"]);
        $("#pDisease").append(' ' + SearchAppointment.getAppointmentCellValues["Disease_Name"]);
        $("#pStatus").append(' ' + SearchAppointment.getAppointmentCellValues["Status"]);
        $("#pCreatedDate").append(' ' + common.toDate(SearchAppointment.getAppointmentCellValues["Created_Date"]));
        $("#pCreatedBy").append(' ' + SearchAppointment.getAppointmentCellValues["Created_By"]);
        $("#pAppointmentTakenTimeStamp").append(' ' + SearchAppointment.getAppointmentCellValues["AppointmentTakenTimeStamp"]);
        $("#pAppointmentProcessedTimeStamp").append(' ' + SearchAppointment.getAppointmentCellValues["AppointmentProcessedTimeStamp"]);
        $("#pNote").append(' ' + SearchAppointment.getAppointmentCellValues["Note"]);
    })
</script>