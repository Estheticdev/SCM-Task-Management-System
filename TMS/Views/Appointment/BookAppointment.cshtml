@using Commons;
@{
    ViewBag.Title = "BookAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formName = (Int32)Commons.Enums.ScreenID.BookAppointment;
}

@Styles.Render("~/Content/ScreenCSS")
@Scripts.Render("~/bundles/ScreenScripts")
<script src="~/Scripts/ActionScripts/BookAppointment.js"></script>
@using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data", name = formName, id = formName, @class = "floating-labels form-horizontal" }))
{
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h4 class="text-themecolor">Book Appointment</h4>
                </div>
                <div class="col-md-7 align-self-center text-right">
                    <div class="d-flex justify-content-end align-items-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Appointment</a></li>
                            <li class="breadcrumb-item active">Book Appointment</li>
                        </ol>
                        <input type="hidden" id="hdnClinicCode" name="hdnClinicCode" value="@Constants.ClinicCode" />
                        <input type="hidden" id="hdnPatientID" name="hdnPatientID" value="0" />
                        <input type="hidden" id="hdnDayID" name="hdnDayID" value="0" />
                        <input type="hidden" id="hdnPatientType" name="hdnDayID" value="0" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card FirstCard">
                        <div class="row" style="margin: 1%;">
                            <div class="col-sm-3 col-md-3 col-lg-3">&nbsp;</div>
                            <div class="col-sm-3 col-md-3 col-lg-3" style="text-align: center">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="ChkNewPatient" name="checked" class="custom-control-input">
                                    <label class="custom-control-label" for="ChkNewPatient">New Patient</label>
                                </div>
                            </div>
                            <div class="col-sm-3 col-md-3 col-lg-3" style="text-align: center">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="ChkRegularPatient" name="checked" class="custom-control-input">
                                    <label class="custom-control-label" for="ChkRegularPatient">Regular Patient</label>
                                </div>
                            </div>
                            <div class="col-sm-3 col-md-3 col-lg-3">&nbsp;</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Basic Information</h5>
                            <h6 class="card-subtitle">Provide Patient Basic Information. Red Highlighted Fields Are Necessary To Fill.</h6>
                            <div class="row m-t-40">
                                <div class="col-lg-3 form-group">
                                    <input type="text" id="txtFullName" name="txtFullName" class="form-control floating-Input AlphabetsOnly clearText bookAppointment" value="">
                                    <span class="bar"></span>
                                    <label for="txtFullName">Full Name</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <input type="text" id="txtPatientContact" name="txtPatientContact" class="form-control floating-Input PhoneNoMasking clearText bookAppointment" value="">
                                    <span class="bar"></span>
                                    <label for="txtPatientContact">Contact Number</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <input type="text" id="txtPatientEmailID" name="txtPatientEmailID" class="form-control floating-Input clearText bookAppointment" value="">
                                    <span class="bar"></span>
                                    <label for="txtPatientEmailID">Email</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <input type="text" id="txtPatientCNIC" name="txtPatientCNIC" class="form-control floating-Input CnicNoMasking clearText bookAppointment" value="">
                                    <span class="bar"></span>
                                    <label for="txtPatientCNIC">CNIC Number.</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 form-group">
                                    <input type="text" id="dtpPatientAge" name="dtpPatientAge" data-language='en' class="form-control floating-Input clearText bookAppointment datePickerBackward" value="">
                                    <span class="bar"></span>
                                    <label class="lbl" for="dtpPatientAge">DOB</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <select class="form-control floating-Select resetDDL bookAppointment" id="ddlPatientBloodGroup">
                                        <option value=""></option>
                                    </select><span class="bar"></span>
                                    <label for="ddlPatientBloodGroup">Blood Group</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <select class="form-control floating-Select resetDDL bookAppointment" id="ddlCity">
                                        <option value=""></option>
                                    </select><span class="bar"></span>
                                    <label for="ddlCity">City</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <textarea class="form-control floating-TextArea clearText bookAppointment" rows="2" id="txtDiscription"></textarea>
                                    <span class="bar"></span>
                                    <label for="txtDiscription">Discription</label>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <textarea class="form-control floating-TextArea clearText bookAppointment" rows="2" id="txtAddress"></textarea>
                                    <span class="bar"></span>
                                    <label for="txtAddress">Address</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Appointment Detail</h5>
                            <h6 class="card-subtitle">Make Appoint With Doctor Here.</h6>
                            <div class="row m-t-40">
                                <div class="col-lg-3 form-group">
                                    <select class="form-control floating-Select resetDDL" id="ddlService">
                                        <option value=""></option>
                                    </select><span class="bar"></span>
                                    <label for="ddlService">Service</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <select class="form-control floating-Select resetDDL" id="ddlDoctor">
                                        <option value=""></option>
                                    </select><span class="bar"></span>
                                    <label for="ddlDoctor">Doctor</label>
                                </div>
                                <div id="abc" class="col-lg-3 form-group">
                                    <input type="text" id="dtpAppointmentDate" name="dtpAppointmentDate" class="form-control floating-Input readOnly clearText datePickerForward" value="">
                                    <span class="bar"></span>
                                    <label class="lbl" for="dtpAppointmentDate">Appointment Date</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <div class="btn-p">
                                        <button type="button" id="btnCheckAvailability" class="btn-circle btn btn-info waves-effect waves-light" title="Check Availability"><i class="fa fa-sync-alt"></i></button>
                                        <span class="LoadingText" style="font-size: 12px;">Checking Availability</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 form-group">
                                    <select class="form-control floating-Select resetDDL" id="ddlSchedule">
                                        <option value=""></option>
                                    </select><span class="bar"></span>
                                    <label for="ddlSchedule">Schedule</label>
                                </div>
                                <div class="col-lg-3 form-group">
                                    <select class="form-control floating-Select resetDDL" id="ddlDisease">
                                        <option value=""></option>
                                    </select><span class="bar"></span>
                                    <label for="ddlDisease">Disease</label>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <input type="text" id="txtAppointmentNote" name="txtAppointmentNote" class="form-control floating-Input clearText" value="">
                                    <span class="bar"></span>
                                    <label for="txtAppointmentNote">Note</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div style="text-align: center;" class="card-body">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-12"></div>
                                <div class="btn-p col-lg-2 col-md-2 col-sm-12">
                                    <button type="button" id="btnCreateAppointment" class="btn-custom btn btn-success waves-effect waves-light"><i class="fa fa-save"></i>&nbsp; Create</button>
                                </div>
                                <div class="btn-p col-lg-2 col-md-2 col-sm-12">
                                    <button type="button" id="btnDeleteAppointment" class="btn-custom btn btn-danger waves-effect waves-light"><i class="fa fa-trash-alt"></i>&nbsp; Delete</button>
                                </div>
                                <div class="btn-p col-lg-2 col-md-2 col-sm-12">
                                    <button type="button" id="btnCancelAppointment" class="btn-custom btn btn-inverse waves-effect waves-light"><i class="fa fa-times"></i>&nbsp; Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    var BookAppointment = (function () {
        var init = function () {
            BookAppointment.bindPageEvents();
            BookAppointment.GenericData();

            $('#ChkRegularPatient').change(function () {
                if (this.checked) {
                    $('#hdnPatientType').val(52);
                    common.openBSModelPopupLvl1('/Appointment/FindRegularPatient?RequestVerificationToken=@Utility.TokenHeaderValue()', 'large', 'Find Regular Patient');
                }
            });

            $('#ChkNewPatient').change(function () {
                if (this.checked) {
                    $('.bookAppointment').prop('disabled', false);
                    $('.bookAppointment').val('');
                    $('#hdnPatientID').val(0);
                    $('#hdnPatientType').val(51);
                    common.SetFormLabel();
                }
            });
        };

        var bindPageEvents = function () {

            $("#btnCheckAvailability").on("click", function () {

                if (AvailabilityCheck()) {

                    $('.LoadingText').show();
                    var weekday = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
                    var dt = new Date($("#dtpAppointmentDate").val());

                    var arrDays = [];
                    arrDays.push(new common.DropDown($("#hdnClinicCode").val(), "ClinicCode"));
                    arrDays.push(new common.DropDown($("#ddlDoctor").val(), "DoctorID"));
                    arrDays.push(new common.DropDown(dt.getDay(), "DayID"));
                    arrDays.push(new common.DropDown($("#dtpAppointmentDate").val(), "Date"));
                    common.FillDropDownListWithParem("ddlSchedule", "", common.CommonURLs.GetDropDownData, arrDays, "DoctorTime", "Error");

                    if ($('#ddlSchedule option').length > 1) {
                        $('.LoadingText').text("  Time available for " + weekday[dt.getDay()]);
                        $('#hdnDayID').val(dt.getDay());
                    }
                    else {
                        $('.LoadingText').text("  No Time Available.");
                        $('#hdnDayID').val(-1);
                    }
                }
            });

            $("#btnCreateAppointment").on("click", function () {
                if (BookAppointment.AppointmentCheck()) {

                    var Patient_Type = $("#hdnPatientType").val();
                    var Patient_ID = $("#hdnPatientID").val();
                    var Full_Name = $("#txtFullName").val();
                    var Contact = common.RemoveDashes($("#txtPatientContact").val());
                    var CNIC = common.RemoveDashes($("#txtPatientCNIC").val());
                    var Email = $("#txtPatientEmailID").val();
                    var DOB = $("#dtpPatientAge").val();
                    var BloodGroup = $("#ddlPatientBloodGroup").val();
                    var City = $("#ddlCity").val();
                    var Address = $("#txtAddress").val();
                    var Discription = $("#txtDiscription").val();

                    var ServiceID = $("#ddlService").val();
                    var DoctorID = $("#ddlDoctor").val();
                    var AppointmentDate = $("#dtpAppointmentDate").val();
                    var DayID = $("#hdnDayID").val();
                    var ScheduleID = $("#ddlSchedule").val();
                    var DiseaseID = $("#ddlDisease").val();
                    var Note = $("#txtAppointmentNote").val();

                    var URL = "/Appointment/SaveAppointments/";

                    $.ajax({
                        url: URL,
                        type: "POST",
                        //contentType: false,
                        dataType: 'json',
                        data: { Patient_ID: Patient_ID, Full_Name: Full_Name, Contact: Contact, CNIC: CNIC, Email: Email, DOB: DOB, BloodGroup: BloodGroup, City: City, Address: Address, Discription: Discription, ServiceID: ServiceID, DoctorID: DoctorID, AppointmentDate: AppointmentDate, DayID: DayID, ScheduleID: ScheduleID, DiseaseID: DiseaseID, Note: Note, Patient_Type: Patient_Type },
                        cache: false,
                        async: true,
                        success: function (data) {
                            debugger;
                            if (data == 'Success') {
                                common.SuccessMessage(common.Message.Success);
                                common.ResetForm();
                                common.SetFormLabel();
                                $("#hdnPatientType").val(0);
                                $("#hdnPatientID").val(0);
                                $("#hdnDayID").val(0)
                                $('.LoadingText').hide();

                            } else {
                                common.ErrorMessage(common.Message.Error);
                            }
                        },
                        error: function () {
                            common.ErrorMessage(common.Message.Error)
                        }
                    });
                };
            });

            $('#ddlService').on('change', function () {
                var arrDoctor = [];
                arrDoctor.push(new common.DropDown($('#hdnClinicCode').val(), "ClinicCode"));
                arrDoctor.push(new common.DropDown($("#ddlService").val(), "Service"));
                common.FillDropDownListWithParem("ddlDoctor", "", common.CommonURLs.GetDropDownData, arrDoctor, "DoctorBasedOnSpeciality", "Error");
                common.FillDropDownListWithParem("ddlDisease", "", common.CommonURLs.GetDropDownData, arrDoctor, "AppointmentDisease", "Error");
            });

            $('#ddlDoctor').on('change', function () {
                var arrDays = [];
                arrDays.push(new common.DropDown($('#hdnClinicCode').val(), "ClinicCode"));
                arrDays.push(new common.DropDown($("#ddlDoctor").val(), "DoctorID"));
                common.FillDropDownListWithParem("ddlDay", "", common.CommonURLs.GetDropDownData, arrDays, "DoctorDays", "Error");
            });
        };

        var AvailabilityCheck = function () {
            var msg = '';
            alertMsgFlag = false;

            var ddlService = $("#ddlService").val()
            if (ddlService == '' || ddlService == null) {
                alertMsgFlag = true;
                msg = msg + "- Service <br/>";
            }

            var ddldoctor = $("#ddlDoctor").val()
            if (ddldoctor == '' || ddldoctor == null) {
                alertMsgFlag = true;
                msg = msg + "- Doctor <br/>";
            }

            var AppointmentDate = $("#dtpAppointmentDate").val()
            if (AppointmentDate == '' || AppointmentDate == null) {
                alertMsgFlag = true;
                msg = msg + "- Appointment Date <br/>";
            }

            if (alertMsgFlag) {
                bootbox.alert({ title: "Please provide following field(s) before checking appointment availability:", message: msg });
                return false;
            }
            else {
                return true;
            }
        }


        var AppointmentCheck = function () {
            var msg = '';
            alertMsgFlag = false;

            if ($('#hdnPatientType').val() == 51) {
                var FullName = $("#txtFullName").val()
                if (FullName == '' || FullName == null) {
                    alertMsgFlag = true;
                    msg = msg + "- Full Name <br/>";
                }

                var PatientContact = $("#txtPatientContact").val()
                if (PatientContact == '' || PatientContact == null) {
                    alertMsgFlag = true;
                    msg = msg + "- Contact No. <br/>";
                }

                var PatientEmailID = $("#txtPatientEmailID").val()
                if (!common.ValidEmail(PatientEmailID)) {
                    alertMsgFlag = true;
                    msg = msg + "- Email is Invalid. <br/>";
                }

                var PatientCNIC = $("#txtPatientCNIC").val()
                if (PatientCNIC == '' || PatientCNIC == null) {
                    alertMsgFlag = true;
                    msg = msg + "- CNIC No. <br/>";
                }

                var PatientBloodGroup = $("#ddlPatientBloodGroup").val()
                if (PatientBloodGroup == '' || PatientBloodGroup == null) {
                    alertMsgFlag = true;
                    msg = msg + "- Blood Group <br/>";
                }
            }

            var ddlService = $("#ddlService").val()
            if (ddlService == '' || ddlService == null) {
                alertMsgFlag = true;
                msg = msg + "- Service <br/>";
            }

            var ddldoctor = $("#ddlDoctor").val()
            if (ddldoctor == '' || ddldoctor == null) {
                alertMsgFlag = true;
                msg = msg + "- Doctor <br/>";
            }

            var AppointmentDate = $("#dtpAppointmentDate").val()
            if (AppointmentDate == '' || AppointmentDate == null) {
                alertMsgFlag = true;
                msg = msg + "- Appointment Date <br/>";
            }

            var ddlSchedule = $("#ddlSchedule").val()
            if (AppointmentDate == '' || AppointmentDate == null) {
                alertMsgFlag = true;
                msg = msg + "- Schedule <br/>";
            }

            var ddlDisease = $("#ddlDisease").val()
            if (AppointmentDate == '' || AppointmentDate == null) {
                alertMsgFlag = true;
                msg = msg + "- Disease <br/>";
            }

            if (alertMsgFlag) {
                bootbox.alert({ title: "Please provide following field(s).:", message: msg });
                return false;
            }
            else {
                return true;
            }
        }

        var GenericData = function () {

            var arrBloodGroup = [];
            arrBloodGroup.push(new common.DropDown(0, "BloodGroup"));
            common.FillDropDownListWithParem("ddlPatientBloodGroup", "", common.CommonURLs.GetDropDownData, arrBloodGroup, "BloodGroup", "Error");

            var arrCityofCountry = [];
            arrCityofCountry.push(new common.DropDown($("#hdnClinicCode").val(), "ClinicCode"));
            common.FillDropDownListWithParem("ddlCity", "", common.CommonURLs.GetDropDownData, arrCityofCountry, "CityofCountry", "Error");

            var arrService = [];
            arrService.push(new common.DropDown($("#hdnClinicCode").val(), "ClinicCode"));
            common.FillDropDownListWithParem("ddlService", "", common.CommonURLs.GetDropDownData, arrService, "Service", "Error");
        }

        return {
            init: init,
            bindPageEvents: bindPageEvents,
            GenericData: GenericData,
            AvailabilityCheck: AvailabilityCheck,
            AppointmentCheck: AppointmentCheck
        };
    })();

    $(document).ready(function () {
        BookAppointment.init();
        $('.LoadingText').hide();
    });

</script>